@{
    ViewBag.Title = "Contato";
}

    <div class="page-content  bg-white">

        <div class="mt-bnr-inr overlay-wraper" style="background-image:url(content/images/banner/contato.jpg);">
            <div class="overlay-main bg-black opacity-07"></div>
            <div class="container">
                <div class="mt-bnr-inr-entry">
                    <h1 class="text-white">Contato</h1>
                    <ul class="mt-breadcrumb breadcrumb-style-1">
                        <li><a href="/">Home</a></li>
                        <li>Contato</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="section-full p-t80 p-b50">

            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <!-- TITLE START -->
                        <div class="section-head text-left">
                            <h2>Fale Conosco</h2>
                            <div class="mt-separator-outer">
                                <div class="mt-separator bg-primary"></div>
                            </div>
                        </div>
                        <!-- TITLE END -->
                        <!-- Form -->

                        <div>
                            <div class="mt-box">
                                <div class="p-a30 bg-gray">
                                    <form class="cons-contact-form contact-style-1" method="post" action="/contato">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <input name="name" type="text" required class="form-control" placeholder="Nome"
                                                           oninvalid="this.setCustomValidity('Por favor preencha este campo.')"
                                                           oninput="this.setCustomValidity('')">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <input name="email" type="email" class="form-control" required placeholder="Email"
                                                           oninvalid="InvalidMsg(this);"
                                                           oninput="InvalidMsg(this);">
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <textarea name="message" rows="5" class="form-control " required placeholder="Mensagem"
                                                              oninvalid="this.setCustomValidity('Por favor preencha este campo.')"
                                                              oninput="this.setCustomValidity('')"></textarea>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <button name="submit" type="submit" value="Submit" class="site-button outline gray">Enviar</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script>
    function InvalidMsg(textbox) {
        if (textbox.validity.valueMissing) {
            textbox.setCustomValidity('Por favor preencha este campo.');
        }
        else if (textbox.validity.typeMismatch) {
            textbox.setCustomValidity('Email inválido.');
        }    
        else {
            textbox.setCustomValidity('');
        }

        return true;
    }
</script>
